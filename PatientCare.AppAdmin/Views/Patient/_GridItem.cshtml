@model Patient

@{ 
    var age="";
    if (Model.DateOfBirth == null)
    {
        age = "---";
    }
    else
    {
        age = (DateTime.Now.Year - Model.DateOfBirth.Value.Year).ToString();
    }

}
<td>
    
    @Html.DisplayFor(modelItem => Model.Id)
</td>
<td>
    @Html.DisplayFor(modelItem => Model.FullName)
</td>
<td>
    @age
</td>
<td>
    @Html.DisplayFor(modelItem => Model.Gender.Name)
</td>
<td>
    @Html.DisplayFor(modelItem => Model.Phone)
</td>
<td>
    @Html.DisplayFor(modelItem => Model.Email)
</td>
<td>
    @Html.DisplayFor(modelItem => Model.Address)
</td>


