@model Patient

@{
    var age = "";
    Layout = null;
    if (Model.DateOfBirth == null)
    {
        age = "";
    }
    else
    {
        age = (DateTime.Now.Year - Model.DateOfBirth.Value.Year).ToString();
    }
}

<div class="row">
    <div class="col-lg-12">
        <form asp-action="" class="form-horizontal">
            <section class="card">
                <div class="card-body">
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group row">
                        <label asp-for="FullName" class="col-sm-2 control-label  pt-2"></label>
                        <div class="col-sm-10">
                            <input asp-for="FullName" class="form-control" disabled>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 control-label  pt-2">Age</label>
                        <div class="col-sm-4">
                            <input value="@age" class="form-control" disabled>

                        </div>
                        <label asp-for="Gender" class="col-sm-2 control-label  pt-2"></label>
                        <div class="col-sm-4">
                            <input asp-for="Gender.Name" class="form-control" disabled>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Email" class="col-sm-2 control-label  pt-2"></label>
                        <div class="col-sm-10">
                            <input asp-for="Email" class="form-control" disabled>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Phone" class="col-sm-2 control-label  pt-2"></label>
                        <div class="col-sm-10">
                            <input asp-for="Phone" class="form-control" disabled>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Address" class="col-sm-2 control-label  pt-2"></label>
                        <div class="col-sm-10">
                            <textarea asp-for="Address" class="form-control" disabled></textarea>
                        </div>
                    </div>
                    <hr />
                    <div class="form-group row">
                        <label asp-for="Weight" class="col-sm-2 control-label  pt-2"></label>
                        <div class="col-sm-4">
                            <input type="text" asp-for="Weight" class="form-control" disabled>
                        </div>
                        <label asp-for="Height" class="col-sm-2 control-label  pt-2"></label>
                        <div class="col-sm-4">
                            <input type="text" asp-for="Height" class="form-control" disabled>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="BloodType" class="col-sm-2 control-label  pt-2"></label>
                        <div class="col-sm-10">
                            <input type="text" asp-for="BloodType.Name" class="form-control" disabled>
                        </div>
                    </div>
                    @if (Model.CronicDiseases != null)
                    {
                    <div class="form-group row">
                        <label asp-for="CronicDiseases" class="col-sm-2 control-label  pt-2"></label>
                        <div class="col-sm-10">
                            <textarea asp-for="CronicDiseases" class="form-control" disabled></textarea>
                        </div>
                    </div>
                    }
                    @if (Model.Gender.Name == "Female")
                    {
                        <div class="form-group row">
                            <label asp-for="IsPregnant" class="col-sm-2 control-label  pt-2"></label>
                            @if (Model.IsPregnant == true)
                            {
                                <div class="col-sm-10">
                                    <input type="text" value="Yes" class="form-control" disabled>
                                </div>
                            }
                            else
                            {
                                <div class="col-sm-10">
                                    <input type="text" value="No" class="form-control" disabled>
                                </div>
                            }

                        </div>
                    }

                <div class="form-group row">
                    <label asp-for="LastModifiedAt" class="col-sm-2 control-label  pt-2"></label>
                    <div class="col-sm-4">
                        <input asp-for="LastModifiedAt" asp-format="{0:dd-MM-yyyy h:mm tt}" class="form-control" disabled>
                    </div>
                    <label asp-for="CreatedAt" class="col-sm-2 control-label  pt-2"></label>
                    <div class="col-sm-4">
                        <input asp-for="CreatedAt" asp-format="{0:dd-MM-yyyy h:mm tt}" class="form-control" disabled>
                    </div>
                </div>
                </div>
            </section>
        </form>
    </div>
</div>
