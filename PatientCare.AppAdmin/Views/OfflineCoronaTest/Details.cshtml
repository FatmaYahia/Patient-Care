@model OfflineCoronaTest

@{
    Layout = null;
    var age = DateTime.Now.Year - Model.Patient.DateOfBirth.Value.Year;
}

<div class="row">
    <div class="col-lg-12">
        <form asp-action="" class="form-horizontal">
            <section class="card">
                <div class="card-body">
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group row">
                        <label class="col-sm-2 control-label  pt-2">Patient Name</label>
                        <div class="col-sm-10">
                            <input asp-for="Patient.FullName" class="form-control" disabled>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 control-label  pt-2">Corona Status</label>
                        <div class="col-sm-10">
                            <input asp-for="CoronaStatus.Name" class="form-control" disabled>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 control-label  pt-2">Patient Age</label>
                        <div class="col-sm-10">
                            <input value="@age" class="form-control" disabled>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 control-label  pt-2">Patient Phone</label>
                        <div class="col-sm-4">
                            <input asp-for="Patient.Phone" class="form-control" disabled>
                        </div>
                        <label class="col-sm-2 control-label  pt-2">Patient Address</label>
                        <div class="col-sm-4">
                            <input asp-for="Patient.Address" class="form-control" disabled>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="LastModifiedAt" class="col-sm-2 control-label  pt-2"></label>
                        <div class="col-sm-4">
                            <input asp-for="LastModifiedAt" asp-format="{0:dd-MM-yyyy h:mm tt}" class="form-control" disabled>
                        </div>
                        <label asp-for="CreatedAt" class="col-sm-2 control-label  pt-2"></label>
                        <div class="col-sm-4">
                            <input asp-for="CreatedAt" asp-format="{0:dd-MM-yyyy h:mm tt}" class="form-control" disabled>
                        </div>
                    </div>
                </div>
            </section>
        </form>
    </div>
</div>
