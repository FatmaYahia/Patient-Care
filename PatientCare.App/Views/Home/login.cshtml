@model PatientCare.AppAdmin.Models.LoginViewModel
@inject UnitOfWork UnitOfWork
@{
    ViewData["Title"] = "login";
}
@*@section Styles {
        <link href="~/css/patient.css" rel="stylesheet" />
        <link href="~/css/Corona.css" rel="stylesheet" />

    }*@



<div class="container-fluid mt-5 mb-5" style="margin-left:450px">

    <div class="col-sm-12 col-md-8 pt-5 mt-5" id="=data">
        <div style="margin-top:75px"></div>
        <form asp-action="login">
            <input type="hidden" asp-for="Id" />
            <div class="row" style="margin-bottom:15px">
                <label asp-for="Email" class="col-sm-3 control-label  pt-2"></label>
                <div class="input-group">
                    <input asp-for="Email" class="form-control form-control-lg" />
                </div>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="row" style="margin-bottom:15px">
                <div>
                    <label asp-for="Password" class="col-sm-3 control-label  pt-2"></label>
                </div>
                <div class="input-group">
                    <input asp-for="Password" class="form-control form-control-lg" />
                </div>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="row" style="margin-bottom:15px">
                <div>
                    <label asp-for="RememberMe" class="col-sm-3 control-label  pt-2"></label>
                </div>
                <div class="input-group">
                    <input asp-for="RememberMe" class="checkbox" />
                </div>
            </div>
            <span class="text-danger">@ViewData["Error"]</span>
            <div class="row" style="margin-bottom:15px">
                <button type="submit" class="btn btn-primary mt-2">Login</button>
                <a asp-action="Register" asp-controller="Patient" class="btn btn-primary mt-2" style="background-color: #f35b67;border: 1px solid #f35b67">Register Now</a>
            </div>
        </form>

    </div>
</div>
