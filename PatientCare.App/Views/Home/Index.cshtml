@*eof slider*@


<!-- specialization list -->
<section id="content" class="ls section_padding_top_100 section_padding_bottom_75">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <h2 class="text-center"> Specializations</h2>
                <div id="isotope_container" class="isotope masonry-layout row">
                    @foreach (var item in Model)
                    {
                        <article class="isotope-item col-sm-4 post format-standard">
                            <div class="entry-thumbnail">
                                <div class="entry-meta-corner">
                                    <span class="date">
                                        <time class="entry-date">
                                            <strong>@item.Doctors.Count</strong>
                                            Doctor
                                        </time>
                                    </span>
                                </div>
                                <img src="@(string.IsNullOrEmpty(item.ImgUrl)?"images/gallery/01.jpg":item.ImgUrl)" style="max-width: 100%;height:263px" alt="">
                            </div>
                            <div class="post-content text-center">
                                <div class="entry-content">
                                    <header class="entry-header">
                                        <h3 class="entry-title">
                                            <a asp-action="Index" asp-controller="Doctor" asp-route-Fk_Specialization="@item.Id" rel="bookmark">@item.Name</a>
                                        </h3>
                                    </header>
                                </div>
                            </div>
                        </article>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
<!-- eof specialization list -->

<section class="ls ms section_padding_75">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <div class="owl-carousel" data-dots="true">
                    @foreach (var Doctor in UnitOfWork.DoctorRepository.GetAll(a => a.IsVerified == true))
                    {
                        <div class="item">
                            <div class="thumbnail">
                                <img src="@(string.IsNullOrEmpty(Doctor.ImgUrl)?"images/team/01.jpg":@Doctor.ImgUrl)" alt="">
                                <div class="caption">
                                    <h3>
                                        <a asp-action="Profile" asp-controller="Doctor" asp-route-Id="@Doctor.Id"> @Doctor.FullName</a>
                                    </h3>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
            <div class="col-sm-12 text-center">
                <a asp-action="Index" asp-controller="Doctor" class="theme_button inverse">See All Doctors</a>
            </div>
        </div>
    </div>
</section>
