@model Donation
@inject UnitOfWork UnitOfWork
@{
    ViewData["Title"] = "Donation";

}
<section id="content" class="ls section_padding_top_100 section_padding_bottom_75">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 to_animate">
                <form method="post" asp-action="Donate">
                    <div class="row">
                        <div class="col-sm-6">
                            <p class="contact-form-message">
                                <select name="Fk_DonateType" class="form-control" asp-items="@(new SelectList(UnitOfWork.DonateTypeRepository.GetAll(),"Id","Name"))">
                                    <option value="0">Select Donation Type</option>
                                </select>
                            </p>
                        </div>
                        <div class="col-sm-6">
                            <p class="contact-form-submit text-center">
                                <button type="submit" class="theme_button">Donate</button>
                            </p>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>