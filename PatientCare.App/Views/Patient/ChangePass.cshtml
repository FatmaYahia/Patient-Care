@model Patient
@{
    ViewData["Title"] = "Change Password";

}
@section Styles {
    <link href="~/css/patient.css" rel="stylesheet" />
    <link href="~/css/Corona.css" rel="stylesheet" />

}

<div class="container mt-5 mb-5">
    <form asp-action="ChangePass" method="post" class="form-horizontal">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row mt-5 justify-content-center">
            <div class="col-sm-12 col-md-6">
                <label class=" pt-2">New Password</label>
                <br />
                <input type="password" name="newPass" class="form-control rounded">
                <span asp-validation-for="Password" class="text-danger"></span>
                <br />
                <label asp-for="ConfirmPassword" class="  pt-2"></label>
                <br />
                <input asp-for="ConfirmPassword" class="form-control rounded">
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                <div class="col col-sm-12 col-md-4 mt-5">

                    <button type="submit" class="btn btn-primary">Change </button>
                </div>
                <div class="col col-sm-12 col-md-4 mt-5">
                    <a asp-action="profile" asp-route-id="@ViewBag.PID" class="btn btn-danger">Cancel</a>
                </div>

            </div>

        </div>
    </form>
</div>

