@model Patient
@{
    ViewData["Title"] = "editProfile";

    var age = "";
    if (Model.DateOfBirth == null)
    {
        age = "";
    }
    else
    {
        age = (DateTime.Now.Year - Model.DateOfBirth.Value.Year).ToString();
    }

}
@section Styles {
    <link href="~/css/patient.css" rel="stylesheet" />
    <link href="~/css/Corona.css" rel="stylesheet" />

}

<div class="col-sm-12 col-md-8 pt-5 mt-5" id="=data">
    <form asp-action="editProfile" class="form-horizontal ord" enctype="multipart/form-data">

        <div class="row">
            <div class="col col-sm-12 col-md-6 mt-3">
                <input type="hidden" asp-for="Id" />
                <input asp-for="Password" type="hidden" />
                <input class="form-control rounded" asp-for="ConfirmPassword" type="hidden" />

                <label asp-for="FullName" class="pt-2"></label>
                <br />
                <input asp-for="FullName" class="form-control rounded">
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="col col-sm-12 col-md-6 mt-3">

                <label asp-for="Email" class=" pt-2"></label>
                <br />
                <input asp-for="Email" class="form-control rounded">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="col col-sm-12 col-md-6 mt-3">

                <label asp-for="DateOfBirth" class="  pt-2"></label>
                <br />
                <input asp-for="DateOfBirth" class="form-control rounded">
                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
            </div>
            <div class="col col-sm-12 col-md-6 mt-3">
                <label asp-for="Gender" class="  pt-2"></label>
                <br />
                <select asp-for="Fk_Gender" class="form-control " asp-items="ViewBag.gender">
                    <option selected disabled>Select Gender</option>
                </select>
            </div>
            <div class="col col-sm-12 col-md-6 mt-3">

                <label asp-for="Address" class=" pt-2"></label>
                <br />
                <input asp-for="Address" class="form-control rounded">
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="col col-sm-12 col-md-6 mt-3">

                <label asp-for="Phone" class=" pt-2"></label>
                <br />
                <input asp-for="Phone" class="form-control rounded">
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <hr />
            <div class="col col-sm-12 col-md-6 mt-3">

                <label asp-for="Height" class="  pt-2"></label>
                <br />
                <input asp-for="Height" class="form-control rounded">
                <span asp-validation-for="Height" class="text-danger"></span>
            </div>
            <div class="col col-sm-12 col-md-6 mt-3">

                <label asp-for="Weight" class=" pt-2"></label>
                <br />
                <input asp-for="Weight" class="form-control rounded">
                <span asp-validation-for="Weight" class="text-danger"></span>
            </div>
            <div class="col col-sm-12 col-md-12 mt-3">
                <label class=" pt-2">Blood Type</label>
                <br />
                <select asp-for="Fk_BloodType" class="form-control " asp-items="ViewBag.BT">
                    <option selected disabled value="null">Select Blood Type</option>
                </select>
            </div>
            <div class="col col-sm-12 col-md-12 mt-3">

                <label asp-for="CronicDiseases" class="  pt-2"></label>
                <br />
                <textarea asp-for="CronicDiseases" class="form-control rounded"></textarea>
            </div>
            <div class="col col-sm-12 col-md-12 mt-5">
                <input class="form-check-input" type="checkbox" asp-for="IsPregnant">
                <label asp-for="IsPregnant" class="ml-2"></label>
            </div>
        </div>
        <div class="col col-sm-12 col-md-4 mt-5">

            <button type="submit" class="btn btn-primary">Submit </button>
        </div>
        <div class="col col-sm-12 col-md-4 mt-5">
            <a asp-action="profile" asp-route-id="@Model.Id" class="btn btn-danger">Cancel</a>
        </div>
    </form>
</div>


