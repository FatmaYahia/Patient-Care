
@{
    ViewData["Title"] = "Change Password";

}
@section Styles {
    <link href="~/css/patient.css" rel="stylesheet" />
    <link href="~/css/Corona.css" rel="stylesheet" />

}

<div class="container mt-5 mb-5">
    <form asp-action="checkPassword" method="post" class="form-horizontal">
        <div class="row mt-5 justify-content-center">
            <div class="col-sm-12 col-md-6">
                <label class=" pt-2">Enter Old Password</label>
                <br />
                <input name="oldPass" class="form-control rounded d-inline-block" value="" type="password">
                @if (ViewBag.Error != null)
                {
                    <label class="text-left text-danger">@ViewBag.Error </label>
                    <br />
                }


                <div class="col col-sm-12 col-md-4 mt-5">

                    <button type="submit" class="btn btn-primary">Next </button>
                </div>
                @*<div class="col col-sm-12 col-md-4 mt-5">
                        <a asp-action="profile" asp-route-id="@ViewBag.ID" class="btn btn-danger">Cancel</a>
                    </div>*@
            </div>

        </div>
    </form>
</div>